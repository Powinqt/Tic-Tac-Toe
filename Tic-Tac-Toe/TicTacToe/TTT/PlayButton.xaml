<Window x:Class="TTT.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTT"
        mc:Ignorable="d"
        Title="Tic Tac Toe" WindowStartupLocation="CenterScreen"
        Height="450" Width="800" ResizeMode="NoResize" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="TIC TAC TOE" FontSize="48" FontWeight="Bold" Foreground="Black" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" />

       
        </StackPanel>

        <!-- Start Button -->
        <StackPanel Grid.Row="1" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="PVP" Width="200" Height="70" FontSize="16" FontWeight="Bold" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="Black" Foreground="White" BorderThickness="0" 
                Cursor="Hand" Click="PVP_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="10"  VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="PVC" Width="200" Height="70" FontSize="16" FontWeight="Bold" 
         HorizontalAlignment="Center" VerticalAlignment="Center"
         Background="Black" Foreground="White" BorderThickness="0" 
         Cursor="Hand" Click="PVC_Click"/>
        </StackPanel>

        
    </Grid>
</Window>
