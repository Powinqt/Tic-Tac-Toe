<Window x:Class="TicTacToe.PVP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="400" Width="400">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >

        </Grid>
        <Grid Grid.Row="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>


            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Button0" Grid.Row="0" Grid.Column="0" FontSize="40" FontWeight="Bold"  Margin="4,4,2,2" Click="Button_Click"/>
            <Button x:Name="Button1" Grid.Row="0" Grid.Column="1" FontSize="40" FontWeight="Bold"  Margin="2,4,2,2" Click="Button_Click"/>
            <Button x:Name="Button2" Grid.Row="0" Grid.Column="2" FontSize="40" FontWeight="Bold"  Margin="2,4,4,2" Click="Button_Click"/>
            <Button x:Name="Button3" Grid.Row="1" Grid.Column="0" FontSize="40" FontWeight="Bold"  Margin="4,2,2,2" Click="Button_Click"/>
            <Button x:Name="Button4" Grid.Row="1" Grid.Column="1" FontSize="40" FontWeight="Bold"  Margin="2" Click="Button_Click"/>
            <Button x:Name="Button5" Grid.Row="1" Grid.Column="2" FontSize="40" FontWeight="Bold"  Margin="2,2,4,2" Click="Button_Click"/>
            <Button x:Name="Button6" Grid.Row="2" Grid.Column="0" FontSize="40" FontWeight="Bold"  Margin="4,2,2,4" Click="Button_Click"/>
            <Button x:Name="Button7" Grid.Row="2" Grid.Column="1" FontSize="40" FontWeight="Bold"  Margin="2,2,2,4" Click="Button_Click"/>
            <Button x:Name="Button8" Grid.Row="2" Grid.Column="2" FontSize="40" FontWeight="Bold"  Margin="2,2,4,4" Click="Button_Click"/>


        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal "
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button x:Name="RestartButton"  Content="New Game" FontSize="26" Height="40" Margin="10" Click="RestartButton_Click"
                BorderThickness="2"
                BorderBrush="Black"
                />

        </StackPanel>





    </Grid>
</Window>
