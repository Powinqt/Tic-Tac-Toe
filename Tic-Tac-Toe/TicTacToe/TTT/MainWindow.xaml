<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Main Menu" Height="450" Width="450"
        Background="#FFBBE8FF">
    <!-- Lighter pastel blue background -->

    <Window.Resources>
        <!-- Retro Main Menu Button Style -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="Background" Value="#FF4F88A3"/>
            <!-- Soft teal for button background -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF1F2A44"/>
            <!-- Warm retro tone for the border -->
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0066CC"/>
                    <!-- Brighter hover effect -->
                    <Setter Property="Foreground" Value="#FF1F2A44"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0066CC"/>
                    <Setter Property="Foreground" Value="#FF1F2A44"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- StackPanel Style for Centering Content -->
        <Style x:Key="CenterStackPanel" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Mixed Blue Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#B3D9FF" Offset="0"/>
                <!-- Light pastel blue -->
                <GradientStop Color="#66B3FF" Offset="0.5"/>
                <!-- Soft medium blue -->
                <GradientStop Color="#4F88A3" Offset="1"/>
                <!-- Deeper teal blue -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Title Text -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="Result" Text="TIC-TAC-TOE" FontSize="45" FontWeight="Bold" Foreground="#FF1F2A44" 
                       FontFamily="Courier New" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" />
        </StackPanel>

        <!-- Player VS Player and Player VS CPU Buttons -->
        <StackPanel Margin="0" Grid.Row="1" Style="{StaticResource CenterStackPanel}"                    
                     Orientation="Vertical"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center">
            <Button Content="Player VS Player" Style="{StaticResource MainButtonStyle}" Width="300" Height="60" Click="PVP_Click"/>
            <Button Content="Player VS CPU" Style="{StaticResource MainButtonStyle}" Width="300" Height="60" Click="PVC_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
